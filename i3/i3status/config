# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
       color_good = "#00ff00"
       color_degraded = "#ffff00"
       color_bad = "#ff0000"
}

#order += "ipv6"

order += "wireless _first_"
#order += "ethernet _first_"
order += "cpu_usage"
order += "load"
order += "memory"
order += "disk /"
order += "tztime local"
order += "battery all"
order += "volume master"

wireless _first_ {
        format_up = "%essid %quality %ip"
        format_down = "W: down"
}

#ethernet _first_ {
#       format_up = "E: %ip (%speed)"
#       format_down = "E: down"
#}

cpu_usage {
 format = " CPU %usage "
}

load {
format = "AVG %1min %5min"
}

memory {
        format = "MEM %used"
        format_degraded = "MEMORY < %available"
}

disk "/" {
        format = "HD %free of %total"
}
tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

battery all {
    format = "BAT%status %percentage"
    format_percentage = "%.02f%s"
    status_chr = "⚡"
    status_bat = "❌(⚡)"
    status_full = "☻"
    status_unk = "?"
   low_threshold =  30 
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
}
