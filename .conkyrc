-- Variables: https://conky.cc/variables
conky.text = [[
${color lightgreen}System:$color ${scroll 32 $nodename $kernel $machine}
$hr
${color lightgreen}Uptime:$color $uptime

${color lightgreen}CPU Frequency:$color $freq_g${color lightgreen}Ghz
${color lightgreen}CPU Usage:$color $cpu% ${cpubar 4}

${color lightgreen}RAM Usage:$color $mem/$memmax - $memperc% ${membar 4}
${color lightgreen}Swap Usage:$color $swap/$swapmax - $swapperc% ${swapbar 4}

${color lightgreen}Processes:$color $processes  ${color lightgreen}Running:$color $running_processes
$hr
${color lightgreen}File systems:
 / $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
${color lightgreen}Networking:
Up:$color ${upspeed enp3s0} ${color lightgreen} - Down:$color ${downspeed enp3s0}
$hr
${color lightgreen}Name              PID     CPU%   MEM%
${color lightgreen} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgreen} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgreen} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgreen} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
]]
